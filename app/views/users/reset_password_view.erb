
	<div class="login-window">
		
		<% if current_user.nil? %>
			<form id="reset-pw-form" method="POST" action='/users/reset_password_work'>
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<h3>Reset PW for <b><%= params[:email] %></b></h3>
				<div class="form-group">
			    <input type="hidden" class="form-control" name='reset[email]' value='<%= params[:email] %>'>
			    <input type="hidden" class="form-control" name='reset[id]' value='<%= params[:id] %>'>
			    <input type="hidden" class="form-control" name='reset[val_code]' id='val_code' value='<%= params[:val] %>'placeholder="Enter Validation code">
			  </div>

				<div class="form-group">
			    <label for="password">New Password</label>
			    <input type="password" class="form-control" name='reset[new_password]' id="password" aria-describedby="" placeholder="Enter Password">
			  </div>


			  <div class="form-group">
			    <label for="confirmpassword">Confirm New Password</label>
			    <input type="password" class="form-control" name='reset[new_password_confirmation]' id="signup_password" aria-describedby="" placeholder="Please confirm password">
			  </div>

			  
				<input type="submit" name="Login" value="Reset" class='btn btn-lg btn-primary sign_log_in'>

				<div class="error" style="color:red">
					<%= flash[:error] if flash[:error] %>
				</div>
			</form>
		<% end %>
	</div>