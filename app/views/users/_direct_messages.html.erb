<% if User.exists?(message.from_user_id) %>
	<% from_user = User.find(message.from_user_id) %>
<% else %>
	<% from_user = nil %>
<% end %>
<div class="direct-message <%= !message.seen ? 'unseen-message' : 'seen-message' %>">
	<div class="subject-line" data-id="<%= message.id %>">
		<div class="subject">
			<b>
				subject: <%= message.subject %> <br>
			</b>
		</div>
		<div class="received">
			<%= message.created_at.strftime("%l:%M %P %D")%>
		</div>
	</div>

	<div class="body-text" style='display: none;'>
	<hr>
		<p>
			<%= message.body %>
		</p>
		from: <a href="#" class='user-modal-pop btn' data-toggle="modal" data-target="#userModal" data-id='<%= from_user.try(:id) %>'><%= from_user.try(:name) %></a>
	</div>
	
</div>