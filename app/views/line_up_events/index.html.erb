  

      <%=
        react_component("LineDay", { 
            day: 'My Events', 
            description: '',
            link: '/line_up_events/my_events', 
            is_admin: current_user.is_admin?,
            user_id: current_user.id
          }) 
      %>

  <% if current_user.is_admin %>

      <%=
        react_component("LineDay", { 
            day: 'New Event', 
            description: '(Admin only)',
            link: new_line_up_event_path, 
            is_admin: current_user.is_admin?,
            user_id: current_user.id
          }) 
      %>

  <% end %>
  
  <% 
  @events.each do |event|
  %>
  <div class="line-day-container">
    <%=
      react_component("LineDay", { 
          day: event.name, 
          description: event.description,
          link: "/line_up_events/#{event.id}", 
          owner: event.user.attributes.slice('avatar_url', 'name'),
          is_admin: current_user.is_admin?,
          user_id: current_user.id
        }) 
    %>
  </div> 

  <%
    end
  %>




