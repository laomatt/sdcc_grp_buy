<form action="/line_days/my_schedule" method="GET" style="padding: 2%;">

	<div class="row">
			<div class="col-lg-6">
				<h2>Schedule for week starting at <span><%= @date.strftime('%a %D') %></span> </h2>
			</div>


			<div class="col-lg-6">
						
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

				<div class="row">
					<div class="form-group col-lg-12">
						<label for="select_date">Select a different week:</label>
						<input type="date" name='date' class="form-control" id='select_date'/>
					</div>
					<div class="form-group col-lg-12">
						<input type="submit" value='See week' class='btn btn-lg btn-primary' style="float: left;width: 100%">
					</div>
				</div>
			</div>

	</div>
</form>


	<%= 
			react_component("MySchedule", { 
				day_hash: current_user.day_hash(@date), 
				is_admin: current_user.is_admin?,
				authenticity_token: form_authenticity_token,
				user_id: current_user.id,
			}) 

	%>


