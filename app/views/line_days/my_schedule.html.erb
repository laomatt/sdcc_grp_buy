<form action="/line_days/my_schedule" method="GET">

	<div class="row">
			
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

		<div class="form-group col-lg-4">
			<label for="select_date">Select a Week</label>
			<input type="date" name='date' class="form-control" id='select_date'/>
		</div>

		<div class="form-group col-lg-8">
			<input type="submit" value='See week' class='btn btn-lg btn-primary' style="float: left;">
		</div>
	</div>
</form>


	<%= 
			react_component("MySchedule", { 
				day_hash: current_user.day_hash(@date), 
				is_admin: current_user.is_admin?,
				authenticity_token: form_authenticity_token,
				user_id: current_user.id,
			}) 

	%>
