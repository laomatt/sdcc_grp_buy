<p id="notice"><%= notice %></p>

<h1>Line Days</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_days.each do |line_day| %>
      <tr>
        <td><%= line_day.day %></td>
        <td><%= line_day.description %></td>
        <td><%= link_to 'Show', line_day %></td>
        <td><%= link_to 'Edit', edit_line_day_path(line_day) %></td>
        <td><%= link_to 'Destroy', line_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line Day', new_line_day_path %>
